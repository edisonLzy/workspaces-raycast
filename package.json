{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "workspaces-manager",
  "title": "Workspaces Manager",
  "description": "Manage development requirements and Git worktrees efficiently",
  "icon": "extension-icon.png",
  "author": "zhiyu",
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "initialize-workspace",
      "title": "Initialize Workspace",
      "description": "Initialize workspace with requirements.json file",
      "mode": "view"
    },
    {
      "name": "requirements",
      "title": "Requirements",
      "description": "View and manage all requirements",
      "mode": "view"
    },
    {
      "name": "test-gemini",
      "title": "Test Gemini",
      "description": "Test Gemini CLI integration",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "workspaceRoot",
      "type": "directory",
      "required": true,
      "title": "工作目录根路径",
      "description": "存储 worktrees 和 requirements.json 的统一目录",
      "default": "~/workspaces"
    },
    {
      "name": "claudeCliPath",
      "type": "textfield",
      "required": false,
      "title": "Claude CLI 路径",
      "description": "Claude Code CLI 的完整路径 (例如: /usr/local/bin/claude 或 /opt/homebrew/bin/claude)",
      "default": "claude",
      "placeholder": "/usr/local/bin/claude"
    },
    {
      "name": "geminiCliPath",
      "type": "textfield",
      "required": false,
      "title": "Gemini CLI 路径",
      "description": "Gemini CLI 的完整路径 (例如: /usr/local/bin/gemini)",
      "default": "gemini",
      "placeholder": "/usr/local/bin/gemini"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.103.0",
    "@raycast/utils": "^1.17.0",
    "dayjs": "^1.11.18",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/compat": "^1.2.7",
    "@eslint/js": "^9.23.0",
    "@stylistic/eslint-plugin": "^4.2.0",
    "@types/node": "22.10.2",
    "@types/react": "19.0.6",
    "eslint": "^9.17.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.27.0"
  },
  "scripts": {
    "build": "ray build -e dist -o dist",
    "dev": "ray develop",
    "fix-lint": "eslint . --fix",
    "lint": "eslint .",
    "prepare": "husky",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "pnpx @raycast/api@latest publish"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@10.18.3+sha512.bbd16e6d7286fd7e01f6b3c0b3c932cda2965c06a908328f74663f10a9aea51f1129eea615134bf992831b009eabe167ecb7008b597f40ff9bc75946aadfb08d"
}
